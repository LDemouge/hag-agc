{% extends '::base.html.twig' %}


{% block title %}
	HAGER - Alter&Go 
{%  endblock %}
{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('bundles/transformation/css/reporter.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('bootstrap-select/dist/css/bootstrap-select.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block body %}

	
	
    <div ng-app="monitor" ng-controller="main as mainCtrl">
    	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container-fluid">
		
    		<!-- Brand and toggle get grouped for better mobile display -->
    		<div class="navbar-header">
      			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        			<span class="sr-only">Toggle navigation</span>
        			<span class="icon-bar"></span>
       				<span class="icon-bar"></span>
        			<span class="icon-bar"></span>
      			</button>
      			<a class="navbar-brand" href="#">
      				<img alt="Brand" src="{{ asset('bundles/transformation/images/logo.png') }}" height="100%">
      			</a>
    		</div>
    	
    		<!-- Collect the nav links, forms, and other content for toggling -->
    		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    			<p class="navbar-text navbar-right">
    				Signed in as <a href="#" class="navbar-link">{{ user }}</a>  
    				<a href="{{ path('logout') }}" data-toggle="tooltip" title="click here to logout"><span class="glyphicon glyphicon-off"></span>  </a>
    			</p>
    			
    				<div class="btn-group">
       			 		<label class="btn btn-default navbar-btn" ng-model="radioModel" btn-radio="'global'">Global</label>
       					<label class="btn btn-default navbar-btn" ng-model="radioModel" btn-radio="'inventory'">Inventory</label>
        				<label class="btn btn-default navbar-btn" ng-model="radioModel" btn-radio="'target'">Target</label>
        				<label class="btn btn-default navbar-btn" ng-model="radioModel" btn-radio="'actionPlan'">Action</label>
   				 </div>
    			
				
			</div>
		
		</div></nav>
		
		<cartography></cartography>
    	
    </div>
    
{% endblock %}


{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('bundles/transformation/js/monitor.js') }}"></script>
	<script type="text/javascript" src="{{ asset('bundles/transformation/js/selectpicker.js') }}"></script>
	<script type="text/javascript" src="{{ asset('bootstrap-select/js/bootstrap-select.js') }}"></script>
	<script type="text/javascript"> $('[data-toggle="popover"]').popover(); </script>
{% endblock %}