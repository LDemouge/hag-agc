
<form novalidate ng-submit="ctrl.addItem()">
	
	<div class="form-group">
        <label>Type</label>
        <select class="form-control" ng-model="newItem.type" ng-options="type.value as type.label for type in types">
        	<option value="" disabled>Activity or project ?</option>
        </select>
    </div>
	<div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" ng-model="newItem.name"></input>
    </div>
 	
    <div class="form-group">
       <label>Description</label>
       <textarea class="form-control" ng-model="newItem.description"></textarea>
    </div>
    
    <div class="btn-toolbar" role="toolbar">
    	<div class="btn-group">
			<button class="btn btn-info btn-sm" type="submit" ng-click="ctrl.keep()">Keep</button>
			<button class="btn btn-default btn-sm" type="submit" ng-click="ctrl.settleLater()">Settle later</button>
			<button class="btn btn-warning btn-sm" ng-click="ctrl.transfer()">Transfer</button>
		</div>
    	
   
    	<div class="btn-group"><button class="btn btn-link btn-sm" ng-click="ctrl.reset()" type="reset">Reset</button></div>
    </div>
</form>
<script>$('.selectpicker').selectpicker();</script>